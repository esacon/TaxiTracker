            <meta name="viewport" content="width=device-width, initial-scale=1">
                    <style>
                        .accordion {
                        background-color: #fae672;
                        color: #444;
                        cursor: pointer;
                        padding: 5px;
                        width: 100%;
                        border: none;
                        text-align: center;
                        outline: none;
                        font-size: 15px;
                        transition: 0.4s;
                        }

                        .active, .accordion:hover {
                        background-color: #fffdef;
                        }

                        .accordion:after {
                        content: '\002B';
                        color: rgb(0, 0, 0);
                        font-weight: bold;
                        float: center;
                        margin-left: 0px;
                        font-size: 0px;
                        }
                        .active:after {
                        content: "\2212";
                        }

                        .panel {
                        padding: 0 18px;
                        display: none;
                        background-color: white;
                        overflow: hidden;
                        }
                    </style>

